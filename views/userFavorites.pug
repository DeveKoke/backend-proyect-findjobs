doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title FAVORITES
        link(rel="stylesheet" href=" ../styles.css")
        link(rel="icon" type="image/x-icon" href="/assets/logo.png")
    body
        include ./header_in.pug
        main
            section 
                h1 MY FAVORITE JOB OFFERS
                div(class="parabtn-container")
                    p Don't have any offer here yet. Begin by searching a position.
                    button(class="button mainbtns") let's find a job

                    each val, valkey in scrap
                        article(class="article_offer" id=valkey)
                            each valor, key in val
                                if key == "error"
                                    h3 ERROR! #{valor}

                                if key == "title"
                                    h3 #{valor}

                                if key == "company_name"
                                    h3 #{valor}
                                
                                div(class="dataOffer")
                                    if key == "location"
                                        div(class="dataOfferItem") 
                                            p Ubicación: 
                                            p #{valor}
                                    
                                    if key == "experience"
                                        div(class="dataOfferItem")
                                        p Experiencia: 
                                        p #{valor} 2 años
                                    
                                    if key == "contract_type"
                                        div(class="dataOfferItem")
                                        p Tipo de contrato: 
                                        p #{valor}

                                    if key == "work_schedule"
                                        div(class="dataOfferItem")
                                            p Jornada: 
                                            p #{valor}
                                    
                                    if key == "salary"
                                        div(class="dataOfferItem")
                                            p Salario: 
                                            p #{valor}

                                    if key == "description"
                                        p Descripción: #{valor}
        include ./footer.pug