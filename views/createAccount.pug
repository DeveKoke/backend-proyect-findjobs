doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title SIGN UP
        link(rel="stylesheet" href=" ../styles.css")
        link(rel="icon" type="image/x-icon" href="/assets/logo.png")
    body
        header
            nav
                a(href="/") 
                    img(src="/assets/logo.png", alt="logo" id="logoNav")
        main 
            h1 SIGN UP 
            form(action="/users/auth/signup" class="signUp-form" id="signUp-form" method="POST")
                label Name:
                input(type="text" placeholder="your name" name="name")
                label Surname:
                input(type="text" placeholder="your surname" name="surname")
                label City:
                input(type="text" placeholder="your city" name="city")
                label Email:
                input(type="email" placeholder="your email" name="email")
                label Password:
                input(type="password" placeholder="your password" name="password") 
                label Reapeat your password:
                input(type="password" placeholder="repeat password" name="repeat_password") 
                input(type="submit" value="Enter" class="button") 

        include ./footer.pug
