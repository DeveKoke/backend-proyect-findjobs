h4 Your offers published
    each object in Offers
        article(class="article_offer")
            each valor, key in object
                if key == "error"
                    h3 ERROR! #{valor}

                if key == "title"
                    h3 #{valor}

                if key == "companyName"
                    h3 #{valor}

                div(class="dataOffer")
                    if key == "location"
                        div(class="dataOfferItem") 
                            p Location: 
                            p #{valor}
                    
                    if key == "experience"
                        div(class="dataOfferItem")
                        p Experiencia: 
                        p #{valor} 
                    
                    if key == "contract_type"
                        div(class="dataOfferItem")
                        p Tipo de contrato: 
                        p #{valor}

                    if key == "work_schedule"
                        div(class="dataOfferItem")
                            p Jornada: 
                            p #{valor}
                    
                    if key == "salary"
                        div(class="dataOfferItem")
                            p Salario: 
                            p #{valor}

                    if key == "description"
                        p Descripci√≥n: #{valor}
